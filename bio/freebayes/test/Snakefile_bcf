rule freebayes:
    input:
        ref = "genome.fasta",
        # you can have a list of samples here
        samples = "mapped/{sample}.bam"
        # targets = "",  # optional
        # cnvMap = "",   # optional
        # populations = "",       # optional
    output:
        "calls/{sample}.bcf"  # either .vcf or .bcf
    log:
        "logs/freebayes/{sample}.log"
    params:
        extra = "",         # optional parameters
        # reference genome chunk size for parallelization (default: 100000)
        chunksize = 100000
    threads: 2
    wrapper:
        "master/bio/freebayes"
